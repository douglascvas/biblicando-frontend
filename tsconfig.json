{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "classic",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noResolve": false,
    "outDir": "build",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "es5"
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./node_modules/@types/**.*.ts",
    "./typings/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser"
  ]
}
